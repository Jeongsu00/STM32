/* USER CODE BEGIN 0 */
int __io_putchar(int ch){
	HAL_UART_Transmit(&huart2, (uint8_t *)&ch, 1, 0xFFFF);
	return ch;
}

uint16_t counter_time, sensor_tim;
float distance;

void delay_us(uint16_t delay){
	__HAL_TIM_SET_COUNTER(&htim10,0);
	while(__HAL_TIM_GET_COUNTER(&htim10)<delay);
}

uint16_t hc_sr04_read(void){
	counter_time=0;
	HAL_GPIO_WrtiePin(GPIOC, GPIO_PIN_0, 0);
	delay_us(2);
	HAL_GPIO_WrtiePin(GPIOC, GPIO_PIN_0, 1);
	delay_us(10);
	HAL_GPIO_WrtiePin(GPIOC, GPIO_PIN_0, 0);

	while (!HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_1));
	while (HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_1)){
		counter_time++;
		delay_us (1);
	}
	return counter_time;
}

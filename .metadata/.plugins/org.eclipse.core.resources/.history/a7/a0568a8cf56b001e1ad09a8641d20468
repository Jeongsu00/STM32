void Setup1(){
    void (*high_setters[])(void) = {Row_1_Set, Row_2_Set, Row_3_Set, Row_4_Set, Row_5_Set, Row_6_Set, Row_7_Set, Row_8_Set};

void Setup(){
	for(int Set = 0; Set < 8; Set++){
		high_setters[Set]();
	}
}

void Dotmartrix_E(){
	for(int x = 0; x < 8; x++){
		Setup();

